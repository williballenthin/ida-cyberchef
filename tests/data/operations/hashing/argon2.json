{
  "operation": "Argon2",
  "category": "hashing",
  "description": "Argon2 password hashing tests with reference implementation test vectors. Argon2 was the winner of the Password Hashing Competition in 2015.",
  "tests": [
    {
      "name": "argon2i_version_19_test",
      "comment": "Argon2i test vector - password='password', salt='somesalt', t=2, m=65536, p=1, tagLength=32",
      "input": {
        "type": "string",
        "value": "password"
      },
      "operations": [
        {
          "op": "Argon2",
          "args": {
            "Salt": {
              "option": "UTF8",
              "string": "somesalt"
            },
            "Iterations": 2,
            "Memory (KiB)": 65536,
            "Parallelism": 1,
            "Hash length (bytes)": 32,
            "Type": "Argon2i",
            "Output format": "Hex hash"
          }
        }
      ],
      "expected": {
        "type": "string",
        "value": "c1628832147d9720c5bd1cfd61367078729f6dfb6f8fea9ff98158e0d7816ed0"
      },
      "tags": [
        "argon2i",
        "reference"
      ]
    },
