{
  "operation": "SHA1",
  "category": "hashing",
  "description": "SHA1 hash algorithm tests with NIST standard test vectors",
  "tests": [
    {
      "name": "empty",
      "comment": "SHA1 of empty string - NIST test vector",
      "input": {"type": "bytes", "encoding": "hex", "value": ""},
      "operations": ["SHA1"],
      "expected": {"type": "string", "value": "da39a3ee5e6b4b0d3255bfef95601890afd80709"},
      "tags": ["nist", "standard-vector", "empty"]
    },
    {
      "name": "abc",
      "comment": "SHA1 of 'abc' - NIST test vector",
      "input": {"type": "bytes", "encoding": "hex", "value": "616263"},
      "operations": ["SHA1"],
      "expected": {"type": "string", "value": "a9993e364706816aba3e25717850c26c9cd0d89d"},
      "tags": ["nist", "standard-vector"]
    },
    {
      "name": "long_string",
      "comment": "SHA1 of long string - NIST test vector",
      "input": {"type": "bytes", "encoding": "hex", "value": "6162636462636465636465666465666765666768666768696768696a68696a6b696a6b6c6a6b6c6d6b6c6d6e6c6d6e6f6d6e6f706e6f7071"},
      "operations": ["SHA1"],
      "expected": {"type": "string", "value": "84983e441c3bd26ebaae4aa1f95129e5e54670f1"},
      "tags": ["nist", "standard-vector"]
    },
    {
      "name": "hello",
      "comment": "SHA1 of 'hello'",
      "input": {"type": "bytes", "encoding": "hex", "value": "68656c6c6f"},
      "operations": ["SHA1"],
      "expected": {"type": "string", "value": "aaf4c61ddcc5e8a2dabede0f3b482cd9aea9434d"},
      "tags": ["standard-vector"]
    },
    {
      "name": "with_rounds",
      "comment": "SHA1 with explicit Rounds parameter (default is 80)",
      "input": {"type": "bytes", "encoding": "hex", "value": "68656c6c6f"},
      "operations": [{"op": "SHA1", "args": {"Rounds": 80}}],
      "expected": {"type": "string", "value": "aaf4c61ddcc5e8a2dabede0f3b482cd9aea9434d"},
      "tags": ["with-args"]
    },
    {
      "name": "all_bytes",
      "comment": "SHA1 of all 256 byte values (0x00-0xFF)",
      "input": {"type": "bytes", "encoding": "hex", "value": ""},
      "operations": ["SHA1"],
      "expected": {"type": "string", "value": "4916d6bdb7f78e6803698cab32d1586ea457dfc8"},
      "tags": ["all-bytes"]
    }
  ]
}
