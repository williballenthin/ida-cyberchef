        {
          "op": "RIPEMD",
          "args": {
            "Size": "160"
          }
        }
      ],
      "expected": {
        "type": "string",
        "value": "9c1185a5c5e9fc54612808977ee8f548b2258d31"
      },
      "tags": [
        "ripemd-160",
        "empty"
      ]
    },
