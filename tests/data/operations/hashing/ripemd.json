{
  "operation": "RIPEMD",
  "category": "hashing",
  "description": "RIPEMD family hash algorithm tests (RIPEMD-128, RIPEMD-160, RIPEMD-256, RIPEMD-320)",
  "tests": [
    {
      "name": "ripemd160_hello",
      "comment": "RIPEMD-160 of 'hello' - most commonly used RIPEMD variant",
      "input": {
        "type": "bytes",
        "encoding": "hex",
        "value": "68656c6c6f"
      },
      "operations": [
        {
          "op": "RIPEMD",
          "args": {
            "Size": "160"
          }
        }
      ],
      "expected": {
        "type": "string",
        "value": "108f07b8382412612c048d07d13f814118445acd"
      },
      "tags": [
        "ripemd-160"
      ]
    },
    {
      "name": "ripemd160_empty",
      "comment": "RIPEMD-160 of empty string",
