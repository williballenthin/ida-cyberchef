{
  "operation": "XML Beautify",
  "category": "data_format",
  "description": "Tests for XML Beautify operation - formatting minified XML with proper indentation",
  "tests": [
    {
      "name": "beautify_simple_xml",
      "comment": "Beautify simple XML without declaration",
      "input": {
        "type": "string",
        "value": "<root><name>Alice</name><age>30</age></root>"
      },
      "operations": [
        "XML Beautify"
      ],
      "expected": {
        "type": "string",
        "value": "<root>\n\t<name>Alice</name>\n\t<age>30</age>\n</root>"
      },
      "tags": [
        "beautify",
        "simple"
      ],
      "skip": true,
      "skipReason": "CyberChef string input handling broken or operation returns JS objects"
    },
    {
