{
  "operation": "XML Minify",
  "category": "data_format",
  "description": "Tests for XML Minify operation - removing whitespace from XML",
  "tests": [
    {
      "name": "minify_beautified_xml",
      "comment": "Minify beautified XML with tabs and newlines",
      "input": {
        "type": "string",
        "value": "<root>\n\t<name>Alice</name>\n\t<age>30</age>\n</root>"
      },
      "operations": [
        "XML Minify"
      ],
      "expected": {
        "type": "string",
        "value": "<root><name>Alice</name><age>30</age></root>"
      },
      "tags": [
        "minify",
        "simple"
      ],
      "skip": true,
      "skipReason": "CyberChef string input handling broken or operation returns JS objects"
    },
    {
