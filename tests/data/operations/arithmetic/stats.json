{
  "operation": "Mean / Median / Sum / Standard Deviation",
  "category": "arithmetic",
  "description": "Statistical operations on numeric data sets",
  "tests": [
    {
      "name": "mean_simple",
      "comment": "Mean of 1,2,3,4,5 = 3",
      "input": {"type": "bytes", "encoding": "hex", "value": "310a320a330a340a35"},
      "operations": [{"op": "Mean", "args": ["Line feed"]}],
      "expected": {"type": "string", "value": "3"},
      "tags": ["mean", "basic"]
    },
    {
      "name": "mean_decimal",
      "comment": "Mean of 1,2,3,4 = 2.5",
      "input": {"type": "bytes", "encoding": "hex", "value": "310a320a330a34"},
      "operations": [{"op": "Mean", "args": ["Line feed"]}],
      "expected": {"type": "string", "value": "2.5"},
      "tags": ["mean", "decimal"]
    },
    {
      "name": "mean_with_floats",
      "comment": "Mean of 1.5,2.5,3.5 = 2.5",
      "input": {"type": "bytes", "encoding": "hex", "value": "312e350a322e350a332e35"},
      "operations": [{"op": "Mean", "args": ["Line feed"]}],
      "expected": {"type": "string", "value": "2.5"},
      "tags": ["mean", "floats"]
    },
    {
      "name": "median_odd_count",
      "comment": "Median of 1,2,3,4,5 = 3",
      "input": {"type": "bytes", "encoding": "hex", "value": "310a320a330a340a35"},
      "operations": [{"op": "Median", "args": ["Line feed"]}],
      "expected": {"type": "string", "value": "3"},
      "tags": ["median", "odd"]
    },
    {
      "name": "median_even_count",
      "comment": "Median of 1,2,3,4 = 2.5",
      "input": {"type": "bytes", "encoding": "hex", "value": "310a320a330a34"},
      "operations": [{"op": "Median", "args": ["Line feed"]}],
      "expected": {"type": "string", "value": "2.5"},
      "tags": ["median", "even"]
    },
    {
      "name": "median_unordered",
      "comment": "Median of 5,1,3,2,4 = 3 (sorted internally)",
      "input": {"type": "bytes", "encoding": "hex", "value": "350a310a330a320a34"},
      "operations": [{"op": "Median", "args": ["Line feed"]}],
      "expected": {"type": "string", "value": "3"},
      "tags": ["median", "unordered"]
    },
    {
      "name": "sum_simple",
      "comment": "Sum of 1,2,3,4,5 = 15",
      "input": {"type": "bytes", "encoding": "hex", "value": "310a320a330a340a35"},
      "operations": [{"op": "Sum", "args": ["Line feed"]}],
      "expected": {"type": "string", "value": "15"},
      "tags": ["sum", "basic"]
    },
    {
      "name": "sum_negative",
      "comment": "Sum of -5,-3,8 = 0",
      "input": {"type": "bytes", "encoding": "hex", "value": "2d350a2d330a38"},
      "operations": [{"op": "Sum", "args": ["Line feed"]}],
      "expected": {"type": "string", "value": "0"},
      "tags": ["sum", "negative"]
    },
    {
      "name": "sum_with_comma_delimiter",
      "comment": "Sum of 10,20,30 = 60 using comma delimiter",
      "input": {"type": "bytes", "encoding": "hex", "value": "31302c32302c3330"},
      "operations": [{"op": "Sum", "args": ["Comma"]}],
      "expected": {"type": "string", "value": "60"},
      "tags": ["sum", "delimiter"]
    },
    {
      "name": "standard_deviation_simple",
      "comment": "Std dev of 2,4,4,4,5,5,7,9 = 2",
      "input": {"type": "bytes", "encoding": "hex", "value": "320a340a340a340a350a350a370a39"},
      "operations": [{"op": "Standard Deviation", "args": ["Line feed"]}],
      "expected": {"type": "string", "value": "2"},
      "tags": ["stddev", "basic"]
    },
    {
      "name": "standard_deviation_uniform",
      "comment": "Std dev of 5,5,5,5 = 0 (no variation)",
      "input": {"type": "bytes", "encoding": "hex", "value": "350a350a350a35"},
      "operations": [{"op": "Standard Deviation", "args": ["Line feed"]}],
      "expected": {"type": "string", "value": "0"},
      "tags": ["stddev", "uniform"]
    }
  ]
}
