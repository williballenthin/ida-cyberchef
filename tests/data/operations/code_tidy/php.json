{
  "operation": "PHP Serialization",
  "category": "code_tidy",
  "description": "Tests for PHP Serialize and PHP Deserialize operations",
  "tests": [
    {
      "name": "php_serialize_array",
      "comment": "Serialize JSON array to PHP format",
      "input": {
        "type": "string",
        "value": "[\"hello\",\"world\"]"
      },
      "operations": [
        "PHP Serialize"
      ],
      "expected": {
        "type": "string",
        "value": "a:2:{i:0;s:5:\"hello\";i:1;s:5:\"world\";}"
      },
      "tags": [
        "php",
        "serialize",
        "array"
      ]
    },
    {
      "name": "php_serialize_object",
      "comment": "Serialize JSON object to PHP format",
      "input": {
        "type": "string",
        "value": "{\"name\":\"Alice\",\"age\":30}"
      },
      "operations": [
        "PHP Serialize"
      ],
      "expected": {
        "type": "string",
        "value": "a:2:{s:4:\"name\";s:5:\"Alice\";s:3:\"age\";i:30;}"
      },
      "tags": [
        "php",
        "serialize",
        "object"
      ]
    },
    {
      "name": "php_serialize_nested_array",
      "comment": "Serialize nested JSON array to PHP format",
      "input": {
        "type": "string",
        "value": "[[1,2],[3,4]]"
      },
      "operations": [
        "PHP Serialize"
      ],
      "expected": {
        "type": "string",
        "value": "a:2:{i:0;a:2:{i:0;i:1;i:1;i:2;}i:1;a:2:{i:0;i:3;i:1;i:4;}}"
      },
      "tags": [
        "php",
        "serialize",
        "nested"
      ]
    },
    {
      "name": "php_serialize_mixed_types",
      "comment": "Serialize JSON with mixed types (string, number, boolean, null)",
      "input": {
        "type": "string",
        "value": "{\"str\":\"test\",\"num\":42,\"bool\":true,\"null\":null}"
      },
      "operations": [
        "PHP Serialize"
      ],
      "expected": {
        "type": "string",
        "value": "a:4:{s:3:\"str\";s:4:\"test\";s:3:\"num\";i:42;s:4:\"bool\";b:1;s:4:\"null\";N;}"
      },
      "tags": [
        "php",
        "serialize",
        "mixed_types"
      ]
    },
    {
      "name": "php_serialize_empty_array",
      "comment": "Serialize empty JSON array",
      "input": {
        "type": "string",
        "value": "[]"
      },
      "operations": [
        "PHP Serialize"
      ],
      "expected": {
        "type": "string",
        "value": "a:0:{}"
      },
      "tags": [
        "php",
        "serialize",
        "empty",
        "edge_case"
      ]
    },
    {
      "name": "php_deserialize_string",
      "comment": "Deserialize PHP serialized string",
      "input": {
        "type": "bytes",
        "encoding": "hex",
        "value": "733a31313a2268656c6c6f20776f726c64223b"
      },
      "operations": [
        "PHP Deserialize"
      ],
      "expected": {
        "type": "string",
        "value": "\"hello world\""
      },
      "tags": [
        "php",
        "deserialize",
        "string"
      ]
    },
    {
      "name": "php_deserialize_array",
      "comment": "Deserialize PHP serialized array to JSON",
      "input": {
        "type": "bytes",
        "encoding": "hex",
        "value": "613a323a7b693a303b733a353a2268656c6c6f223b693a313b733a353a22776f726c64223b7d"
      },
      "operations": [
        "PHP Deserialize"
      ],
      "expected": {
        "type": "string",
        "value": "[\"hello\",\"world\"]"
      },
      "tags": [
        "php",
        "deserialize",
        "array"
      ]
    },
    {
      "name": "php_deserialize_integer",
      "comment": "Deserialize PHP serialized integer",
      "input": {
        "type": "string",
        "value": "i:42;"
      },
      "operations": [
        "PHP Deserialize"
      ],
      "expected": {
        "type": "string",
        "value": "42"
      },
      "tags": [
        "php",
        "deserialize",
        "integer"
      ]
    },
    {
      "name": "php_deserialize_boolean",
      "comment": "Deserialize PHP serialized boolean",
      "input": {
        "type": "string",
        "value": "b:1;"
      },
      "operations": [
        "PHP Deserialize"
      ],
      "expected": {
        "type": "string",
        "value": "true"
      },
      "tags": [
        "php",
        "deserialize",
        "boolean"
      ]
    },
    {
      "name": "php_deserialize_null",
      "comment": "Deserialize PHP serialized null value",
      "input": {
        "type": "string",
        "value": "N;"
      },
      "operations": [
        "PHP Deserialize"
      ],
      "expected": {
        "type": "string",
        "value": "null"
      },
      "tags": [
        "php",
        "deserialize",
        "null"
      ]
    },
    {
      "name": "php_serialize_deserialize_roundtrip",
      "comment": "Test roundtrip serialization and deserialization",
      "input": {
        "type": "string",
        "value": "[1,2,3]"
      },
      "operations": [
        "PHP Serialize",
        "PHP Deserialize"
      ],
      "expected": {
        "type": "string",
        "value": "[1,2,3]"
      },
      "tags": [
        "php",
        "roundtrip",
        "serialize",
        "deserialize"
      ]
    }
  ]
}
